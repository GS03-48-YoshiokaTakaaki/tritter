= form_for(@tweet) do |f|
  - if @tweet.errors.any?
    #error_explanation
      %h2
        = pluralize(@tweet.errors.count, "error")
        prohibited this tweet from being saved:
      %ul
        - @tweet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :message
    %br/
    = f.text_field :message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
