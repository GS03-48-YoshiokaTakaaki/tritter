.container.p-y-3
  .row
    .col-md-4.col-md-offset-4
      %h2.m-b-2 Tritterを使ってみよう
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do|f|
        = devise_error_messages!
      .field.m-b-2
        = f.text_field :name, class: "form-control", placeholder: "ユーザー名"
      .field.m-b-2
        = f.email_field :email, class: "form-control", placeholder: "メールアドレス"
      .field.m-b-2
        = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード"
      .actions.m-t-3
        = f.submit "アカウント作成", class: "btn btn-block btn-primary"
%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Sign up"
= render "users/shared/links"
