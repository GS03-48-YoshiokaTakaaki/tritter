.container.p-y-1
  .row
    .col-lg-9.col-lg-push-3
      .profile
        %h2.m-b-2 プロフィールの設定
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          .field.form-group.row
            .col-sm-3.form-control-label= f.label :name, "ユーザー名"
            .col-sm-9= f.text_field :name, autofocus: true, class: "form-control", required: true
          .field.form-group.row
            .col-sm-3.form-control-label= f.label :email, "メールアドレス"
            .col-sm-9= f.email_field :email, class: "form-control", required: true
          .field.form-group.row
            .col-sm-3.form-control-label= f.label :current_password, "現在のパスワード"
            .col-sm-9= f.password_field :current_password, autocomplete: "off", class: "form-control", required: true
          .field.form-group.row
            .col-sm-3.form-control-label= f.label :password, "新しいパスワード"
            .col-sm-9= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを変更する場合は入力してください"
          .field.form-group.row
            .col-sm-3.form-control-label= f.label :password_confirmation, "新しいパスワード（確認）"
            .col-sm-9= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードを変更する場合は入力してください"
          .actions.text-xs-right
            = f.submit "更新する", class: "btn btn-primary"
            = link_to "戻る", root_path, class: "btn btn-secondary"
          .text-xs-right
            %small= link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete
    .col-lg-3.col-lg-pull-9